{
  "compilerOptions": {
    "incremental": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2024",
    "esModuleInterop": true,
    "removeComments": true,
    "importHelpers": true,
    "types": [
      "node",
      "jest"
    ],
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
