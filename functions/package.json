    "csv": "^6.3.10",
    "dotenv": "^16.4.5",
    "express-validator": "^7.1.0",
    "firebase-admin": "^12.3.0",
    "firebase-functions": "^5.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/eslint": "^9.6.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.8.0",
    "firebase-functions-test": "^3.3.0",
    "typescript": "^5.5.4"
